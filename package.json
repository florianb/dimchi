{
  "name": "dimchi",
  "version": "0.0.1-0",
  "description": "The Dimension Data Managed Cloud, kindly served as spicy app.",
  "main": "main.js",
  "config": {
    "loglevel": "error"
  },
  "scripts": {
    "preversion": "sh ./scripts/test.sh",
    "check": "sh ./scripts/check.sh",
    "build": "sh ./scripts/build.sh",
    "test": "sh ./scripts/test.sh",
    "update": "sh ./scripts/update.sh",
    "watch": "sh ./scripts/watch.sh",
    "start": "electron . &",
    "reset": "rm -rf node_modules; npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florianb/dimchi.git"
  },
  "keywords": [
    "dimensiondata",
    "cloud"
  ],
  "author": "Florian Breisch <florian.breisch@mindkeeper.solutions>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/florianb/dimchi/issues"
  },
  "homepage": "https://github.com/florianb/dimchi#readme",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "nyc": "^6.4.0",
    "xo": "^0.14.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "electron-prebuilt": "^0.37.7",
    "meow": "^3.7.0",
    "ora": "^0.2.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "test/**/*.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "files": "test/**/*.js",
    "source": "**/*.{js,jsx}",
    "require": [
      "babel-core/register"
    ]
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "ignores": [
      "lib/**/*",
      "*.js"
    ]
  }
}
